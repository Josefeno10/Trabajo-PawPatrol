@model PedidosComida.Models.tblProducto

@{
    ViewBag.Title = "Detalles del Producto";
}

<!-- Bootstrap Icons + Fuente -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
        border: none;
    }

    .card-header {
        background-color: #4d6a4d;
        color: white;
        text-align: center;
    }

    .form-wrapper {
        width: 95%;
        max-width: 800px;
        margin: 0 auto;
    }

    dt {
        font-weight: 600;
    }

    dd {
        margin-bottom: 1rem;
    }

    .btn-action {
        font-size: 1.1rem;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header">
            <h4><i class="bi bi-info-circle-fill me-2"></i>Detalles del producto</h4>
        </div>
        <div class="card-body">
            <div class="form-wrapper">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Precio)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Precio)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Categoria)
                    </dd>

                    <dt class="col-sm-4">
                        Imagen del producto
                    </dt>
                    <dd class="col-sm-8">
                        <img src="@Model.ImagenURL" alt="Imagen del producto" style="max-width: 200px; border-radius: 10px;" />
                        <div class="text-muted mt-2">@Model.ImagenURL</div>
                    </dd>
                </dl>

                <div class="text-center mt-4">
                    @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.ID_Producto }, new { @class = "btn btn-warning btn-action me-3" })
                    @Html.ActionLink("← Volver al listado ", "Index", null, new { @class = "btn btn-outline-secondary btn-action" })
                </div>
            </div>
        </div>
    </div>
</div>
