@model IEnumerable<PedidosComida.Models.tblProducto>

@{
    ViewBag.Title = "Productos ";
}

<!-- Bootstrap Icons + Fuente -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-action {
        margin: 0 0.2rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container mt-5">
    <div class="header-actions">
        <h2><i class="bi bi-box-seam me-2"></i>Listado de productos</h2>
        @Html.ActionLink("➕ Agregar nuevo!", "Create", null, new { @class = "btn btn-success btn-lg" })
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
                <th>@Html.DisplayNameFor(model => model.First().Categoria)</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                    <td>
                        <img src="@item.ImagenURL" alt="Imagen del producto" style="max-width: 100px; max-height: 100px;" class="rounded shadow-sm" />
                    </td>
                    <td>
                        @Html.ActionLink("✏️ Editar ", "Edit", new { id = item.ID_Producto }, new { @class = "btn btn-warning btn-sm btn-action" })
                        @Html.ActionLink("🔍 Detalles", "Details", new { id = item.ID_Producto }, new { @class = "btn btn-info btn-sm text-white btn-action" })
                        @Html.ActionLink("🗑️ Eliminar", "Delete", new { id = item.ID_Producto }, new { @class = "btn btn-danger btn-sm btn-action" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
