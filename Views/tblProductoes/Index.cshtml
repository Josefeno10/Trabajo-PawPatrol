@model IEnumerable<PedidosComida.Models.tblPedido>

@{
    ViewBag.Title = "Pedidos";
}

<!-- Bootstrap Icons + Fuente -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
        border: none;
    }

    .card-header {
        background-color: #4d6a4d;
        color: white;
        text-align: center;
    }

    .btn-primary {
        background-color: #4d6a4d;
        border: none;
    }

        .btn-primary:hover {
            background-color: #3c523c;
        }

    .btn-action {
        margin-right: 5px;
    }

    .table thead {
        background-color: #4d6a4d;
        color: white;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header">
            <h4><i class="bi bi-list-ul me-2"></i>Listado de Pedidos</h4>
        </div>
        <div class="card-body bg-white">
            <div class="mb-3 text-end">
                @Html.ActionLink("Nuevo Pedido", "Create", null, new { @class = "btn btn-primary" })
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NombreCliente)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Direccion)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaHora)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Total)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreCliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaHora)</td>
                            <td>$@item.Total</td>
                            <td class="text-center">
                                @Html.ActionLink(" ", "Edit", new { id = item.ID_Pedido }, new { @class = "btn btn-sm btn-outline-primary btn-action", @title = "Editar", @aria_label = "Editar", @role = "button" })<i class="bi bi-pencil-square"></i>
                                @Html.ActionLink(" ", "Details", new { id = item.ID_Pedido }, new { @class = "btn btn-sm btn-outline-info btn-action", @title = "Detalles", @aria_label = "Detalles", @role = "button" })<i class="bi bi-eye-fill"></i>
                                @Html.ActionLink(" ", "Delete", new { id = item.ID_Pedido }, new { @class = "btn btn-sm btn-outline-danger btn-action", @title = "Eliminar", @aria_label = "Eliminar", @role = "button" })<i class="bi bi-trash-fill"></i>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-end bg-light">
            <small class="text-muted">Pedidos registrados hasta la fecha: @Model.Count()</small>
        </div>
    </div>
</div>
