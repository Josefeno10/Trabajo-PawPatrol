@model PedidosComida.Models.tblProducto

@{
    ViewBag.Title = "Eliminar Producto";
}

<!-- Bootstrap Icons + Fuente -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
        border: none;
    }

    .card-header {
        background-color: #4d6a4d;
        color: white;
        text-align: center;
    }

    .btn-danger {
        background-color: #b02a37;
        border: none;
    }

        .btn-danger:hover {
            background-color: #842029;
        }

    .form-wrapper {
        width: 95%;
        max-width: 800px;
        margin: 0 auto;
    }

    dt {
        font-weight: 600;
    }

    dd {
        margin-bottom: 1rem;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header">
            <h4><i class="bi bi-trash-fill me-2"></i>Eliminar producto</h4>
        </div>
        <div class="card-body">
            <div class="form-wrapper">
                <h5 class="text-center mb-4 text-danger">¿Estás seguro de que deseas eliminar este producto?</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Precio)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Precio)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Categoria)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ImagenURL)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ImagenURL)
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center mt-4">
                        <input type="submit" value="Eliminar" class="btn btn-danger btn-lg me-3" />
                        @Html.ActionLink("← Volver al listado ", "Index", null, new { @class = "btn btn-outline-secondary btn-lg" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
