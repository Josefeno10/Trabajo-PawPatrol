@model PedidosComida@model PedidosComida.Models.tblPedido

@{
    ViewBag.Title = "Editar Pedido";
administrarpedidos
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4"><i class="bi bi-pencil-square"></i> Editar Pedido</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_Pedido)

                <div class="mb-3">
                    @Html.LabelFor(model => model.NombreCliente, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.NombreCliente, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NombreCliente, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Direccion, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Telefono, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.FechaHora, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.FechaHora, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.FechaHora, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Total, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.Total, new { @class = "form-control", @readonly = "readonly" }) <!-- Total calculado automáticamente -->
                    @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5"><i class="bi bi-save"></i> Guardar Cambios</button>
                </div>
            }

            <div class="text-center mt-3">
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
 master
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
