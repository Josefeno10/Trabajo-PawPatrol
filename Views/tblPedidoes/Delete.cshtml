@model PedidosComida.Models.tblPedido

@{
    ViewBag.Title = "Eliminar Pedido";
}

<!-- Bootstrap Icons + Fuente Poppins -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .delete-container {
        max-width: 700px;
        margin: 4rem auto;
        background: #fff;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .delete-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .details-group dt {
        font-weight: 600;
        margin-top: 1rem;
    }

    .btn-action {
        margin-right: 0.5rem;
    }
</style>

<div class="container delete-container">
    <div class="delete-header">
        <i class="bi bi-trash3-fill text-danger fs-3"></i>
        <h2 class="mb-0">Eliminar Pedido</h2>
    </div>

    <p class="fs-5 text-danger mb-4"><strong>¿Estás seguro que deseas eliminar este pedido?</strong></p>

    <dl class="row details-group">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreCliente)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCliente)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaHora)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaHora)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Total)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Total)</dd>
    </dl>

    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    <div class="mt-4 d-flex justify-content-end">
        <input type="submit" value="🗑️ Eliminar" class="btn btn-danger btn-action" />
        @Html.ActionLink("🔙 Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
    }
</div>
