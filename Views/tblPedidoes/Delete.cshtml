@model PedidosComida.Models.tblPedido

@{
    ViewBag.Title = "Eliminar Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center shadow-sm">
                <h4><i class="bi bi-exclamation-triangle-fill"></i> ¿Estás seguro de que deseas eliminar este pedido?</h4>
            </div>

            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-end fw-bold">Nombre del Cliente</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCliente)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Dirección</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Teléfono</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Fecha y Hora</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaHora)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Total</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Total)</dd>
                    </dl>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center mt-4">
                    <input type="submit" value="Eliminar" class="btn btn-danger me-3" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
