@model IEnumerable<PedidosComida.Models.tblPedido>

@{
    ViewBag.Title = "Lista de Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-receipt-cutoff"></i> Lista de Pedidos</h2>
        @Html.ActionLink("Nuevo Pedido", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>Cliente</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Fecha y Hora</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreCliente)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@item.FechaHora?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>$@item.Total?.ToString("0.00")</td>
                        <td class="text-center">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID_Pedido }, new { @class = "btn btn-warning btn-sm me-1" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Pedido }, new { @class = "btn btn-info btn-sm me-1" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Pedido }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
