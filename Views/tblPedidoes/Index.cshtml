@model IEnumerable<PedidosComida.Models.tblPedido>

@{
    ViewBag.Title = "Pedidos";
}

<!-- Bootstrap Icons + Fuente -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
        border: none;
    }

    .card-header {
        background-color: #4d6a4d;
        color: white;
        text-align: center;
        padding: 20px 30px;
    }

        .card-header h4 {
            margin: 0;
            font-weight: 600;
        }

    .card-body {
        background-color: white;
        padding: 30px;
    }

    .btn-custom {
        background-color: #4d6a4d;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #3c523c;
        }

    .table thead {
        background-color: #4d6a4d;
        color: white;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .card-footer {
        background-color: #f0f0f0;
        padding: 10px 20px;
        text-align: right;
        font-size: 0.9rem;
        color: #555;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header">
            <h4><i class="bi bi-card-list me-2"></i>Listado de Pedidos</h4>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-custom" })
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NombreCliente)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Direccion)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaHora)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Total)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreCliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaHora)</td>
                            <td>$@item.Total</td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.ID_Pedido }, new { @class = "btn btn-sm btn-outline-primary me-1", title = "Editar" })<i class="bi bi-pencil-square"></i>
                                @Html.ActionLink(" ", "Details", new { id = item.ID_Pedido }, new { @class = "btn btn-sm btn-outline-info me-1", title = "Detalles" })<i class="bi bi-eye-fill"></i>
                                @Html.ActionLink(" ", "Delete", new { id = item.ID_Pedido }, new { @class = "btn btn-sm btn-outline-danger", title = "Eliminar" })<i class="bi bi-trash-fill"></i>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            Total de pedidos: @Model.Count()
        </div>
    </div>
</div>
