@model PedidosComida.Models.tblPedido

@{
    ViewBag.Title = "Detalles del Pedido";
}

<!-- Bootstrap Icons + Fuente Poppins -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #dce1d4, #f8f4e3);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .details-container {
        max-width: 700px;
        margin: 4rem auto;
        background: #fff;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .details-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .details-group dt {
        font-weight: 600;
        margin-top: 1rem;
    }

    .btn-action {
        margin-right: 0.5rem;
    }
</style>

<div class="container details-container">
    <div class="details-header">
        <i class="bi bi-file-earmark-text fs-3"></i>
        <h2 class="mb-0">Detalles del Pedido</h2>
    </div>

    <dl class="row details-group">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreCliente)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCliente)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaHora)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaHora)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Total)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Total)</dd>
    </dl>

    <div class="mt-4 d-flex justify-content-end">
        @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.ID_Pedido }, new { @class = "btn btn-warning btn-action" })
        @Html.ActionLink("🔙 Volver", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
