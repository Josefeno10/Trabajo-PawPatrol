<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar-brand {
            font-family: 'Georgia', serif;
            letter-spacing: 1px;
        }

        .nav-link:hover {
            text-decoration: underline;
        }

        footer {
            color: #6b4e32;
        }
    </style>
</head>
<body>
    <!-- Menú de Navegación con estilo de restaurante -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #8B4513;">
        <div class="container">
            @Html.ActionLink("🍽 BuenProvecho", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold fs-4" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white fw-semibold" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Comida", "Index", "tblProductoes", new { area = "" }, new { @class = "nav-link text-white fw-semibold" })
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" href="@Url.Action("Index", "tblCarritoes")">
                                <i class="bi bi-cart-check-fill me-1"></i>Carrito
                            </a>
                        </li>

                    }
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Administrar Pedidos", "Index", "Admin", new { area = "" }, new { @class = "nav-link text-white fw-semibold" })
                        </li>
                    }
                </ul>

                <div class="d-flex">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer class="text-center mt-4">
            <p>&copy; @DateTime.Now.Year - Tu comida favorita, en camino</p>
        </footer>
    </div>

    <!-- Scripts de Bootstrap -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
