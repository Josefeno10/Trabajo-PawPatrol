@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "d-flex align-items-center gap-3" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav flex-row align-items-center gap-3 mb-0">
            <li class="nav-item">
                <a class="nav-link text-white fw-semibold" title="Gestionar cuenta" href="@Url.Action("Index", "Manage")">
                    <i class="bi bi-person-circle me-1"></i>Hola @User.Identity.GetUserName()!
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-semibold" href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="bi bi-box-arrow-right me-1"></i>Cerrar sesión
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav flex-row align-items-center gap-3 mb-0">
        <li class="nav-item">
            <a class="nav-link text-white fw-semibold" id="registerLink" href="@Url.Action("Register", "Account")">
                <i class="bi bi-person-plus me-1"></i>Registrarse
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fw-semibold" id="loginLink" href="@Url.Action("Login", "Account")">
                <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar sesión
            </a>
        </li>
    </ul>
}
