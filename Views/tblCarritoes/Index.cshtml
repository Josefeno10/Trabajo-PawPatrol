@model IEnumerable<PedidosComida.Models.tblCarrito>

@{
    ViewBag.Title = "Carrito de Compras";
}

<h2 class="text-center mb-4">Carrito de Compras</h2>

<table class="table table-hover shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Pedido</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_Pedido</td>
                <td>@item.ID_Producto</td>
                <td>@item.Cantidad</td>
                <td>@item.Subtotal.ToString("C")</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { ID_Pedido = item.ID_Pedido, ID_Producto = item.ID_Producto }, new { @class = "btn btn-sm btn-outline-warning me-1" })
                    @Html.ActionLink("Detalles", "Details", new { ID_Pedido = item.ID_Pedido, ID_Producto = item.ID_Producto }, new { @class = "btn btn-sm btn-outline-info me-1" })
                    @Html.ActionLink("Eliminar", "Delete", new { ID_Pedido = item.ID_Pedido, ID_Producto = item.ID_Producto }, new { @class = "btn btn-sm btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
