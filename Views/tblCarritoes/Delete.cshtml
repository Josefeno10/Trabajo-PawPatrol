@model PedidosComida.Models.tblCarrito

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro que deseas eliminar este producto del carrito?</h3>
<div>
    <h4>tblCarrito</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ID_Pedido)</dt>
        <dd>@Html.DisplayFor(model => model.ID_Pedido)</dd>

        <dt>@Html.DisplayNameFor(model => model.ID_Producto)</dt>
        <dd>@Html.DisplayFor(model => model.ID_Producto)</dd>

        <dt>@Html.DisplayNameFor(model => model.Cantidad)</dt>
        <dd>@Html.DisplayFor(model => model.Cantidad)</dd>

        <dt>@Html.DisplayNameFor(model => model.Subtotal)</dt>
        <dd>@Html.DisplayFor(model => model.Subtotal)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
