@model PedidosComida.Models.tblCarrito

@{
    ViewBag.Title = "Detalles del Producto en el Carrito";
}

<h2 class="text-center mb-4">Detalles del Producto</h2>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-4">Pedido</dt>
        <dd class="col-sm-8">@Model.ID_Pedido</dd>

        <dt class="col-sm-4">Producto</dt>
        <dd class="col-sm-8">@Model.ID_Producto</dd>

        <dt class="col-sm-4">Cantidad</dt>
        <dd class="col-sm-8">@Model.Cantidad</dd>

        <dt class="col-sm-4">Subtotal</dt>
        <dd class="col-sm-8">@Model.Subtotal.ToString("C")</dd>
    </dl>

    <div class="mt-4">
        @Html.ActionLink("Editar", "Edit", new { ID_Pedido = Model.ID_Pedido, ID_Producto = Model.ID_Producto }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-secondary ms-2" })
    </div>
</div>
