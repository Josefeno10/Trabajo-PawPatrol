@model PedidosComida.Models.tblCarrito

@{
    ViewBag.Title = "Detalles del Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="bi bi-info-circle-fill"></i> Detalles del Producto en el Carrito</h3>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Cantidad</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>

                <dt class="col-sm-4">Subtotal</dt>
                <dd class="col-sm-8">$@Html.DisplayFor(model => model.Subtotal)</dd>

                <dt class="col-sm-4">Cliente</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.tblPedido.NombreCliente)</dd>

                <dt class="col-sm-4">Producto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.tblProducto.Nombre)</dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            @Html.ActionLink("Editar", "Edit", new { id = Model.ID_Detalle }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
</div>
