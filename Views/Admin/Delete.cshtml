@model PedidosComida.Models.tblPedido

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-4">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <h4 class="mb-0">Confirmar eliminación de pedido</h4>
        </div>
        <div class="card-body">
            <p class="lead text-danger"><strong>¿Estás seguro de que deseas eliminar este pedido?</strong></p>

            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item">
                    <i class="bi bi-person-fill text-danger me-2"></i>
                    <strong>Cliente:</strong> @Model.NombreCliente
                </li>
                <li class="list-group-item">
                    <i class="bi bi-geo-alt-fill text-danger me-2"></i>
                    <strong>Dirección:</strong> @Model.Direccion
                </li>
                <li class="list-group-item">
                    <i class="bi bi-telephone-fill text-danger me-2"></i>
                    <strong>Teléfono:</strong> @Model.Telefono
                </li>
                <li class="list-group-item">
                    <i class="bi bi-calendar-event-fill text-danger me-2"></i>
                    <strong>Fecha y Hora:</strong> @Model.FechaHora.ToString("dd/MM/yyyy hh:mm tt")
                </li>
                <li class="list-group-item">
                    <i class="bi bi-currency-dollar text-danger me-2"></i>
                    <strong>Total:</strong> @Model.Total.ToString("C")
                </li>
                <li class="list-group-item">
                    <i class="bi bi-info-circle-fill text-danger me-2"></i>
                    <strong>Estado:</strong> @Model.Estado
                </li>
            </ul>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between">
                    <input type="submit" value="🗑️ Eliminar pedido" class="btn btn-danger" />
                    @Html.ActionLink("⬅️ Cancelar", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>
